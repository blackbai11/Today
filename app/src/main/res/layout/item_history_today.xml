<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="170dp"
    android:layout_height="320dp"
    android:layout_margin="@dimen/home_title_padding_size"
    app:cardCornerRadius="0dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            >

            <ImageView
                android:id="@+id/historyTodayIv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/dateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/colorHistoryTodayDate"
                android:maxLines="1"
                android:padding="1dp"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                />
        </FrameLayout>


        <TextView
            android:paddingTop="20dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:id="@+id/infoTv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@android:color/white"
            />


    </LinearLayout>


    <View
        android:id="@+id/historyTodayItemFloatView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ripple_with_no_mask"
        />

</android.support.v7.widget.CardView>